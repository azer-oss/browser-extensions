{
  "manifest_version": 2,
  "name": "Kozmos",
  "description": "The simpliest way to keep your bookmarks.",
  "version": "2.1",
  "browser_action": {
    "default_icon": "images/heart-icon.png",
    "default_title": "Kozmos"
  },
  "content_scripts": [
    {
      "matches": [
        "http://0.0.0.0/*",
        "http://getkozmos.com/*",
        "http://*.getkozmos.com/*",
        "https://getkozmos.com/*",
        "https://*.getkozmos.com/*",
        "http://localhost:9000/*"
      ],
      "all_frames": true,
      "js": ["content.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "activeTab",
    "tabs",
    "cookies",
    "bookmarks",
    "topSites",
    "history",
    "*://*.getkozmos.com/*",
    "http://localhost:9000/*"
  ],
  "icons": { "16": "images/icon16.png",
             "48": "images/icon48.png",
             "128": "images/icon128.png"
  }
}
