{
  "manifest_version": 2,
  "name": "Kozmos: Beautiful New Tab with Quick Search",
  "description": "A minimal and beautiful new tab page with a special search feature for your history and bookmarks.",
  "version": "8.9",
  "browser_action": {
    "default_icon": "images/heart-icon.png",
    "default_title": "Kozmos",
    "default_popup": "popup.html"
  },
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "content_scripts": [
    {
      "matches": [
        "http://getkozmos.com/*",
        "http://*.getkozmos.com/*",
        "https://getkozmos.com/*",
        "https://*.getkozmos.com/*",
        "http://test.getkozmos.com/*",
        "http://*.test.getkozmos.com/*",
        "https://test.getkozmos.com/*",
        "https://*.test.getkozmos.com/*"
      ],
      "all_frames": true,
      "js": ["./content.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "activeTab",
    "tabs",
    "cookies",
    "bookmarks",
    "topSites",
    "history",
    "*://*.getkozmos.com/*"
  ],
  "icons": { "16": "images/icon16.png",
             "48": "images/icon48.png",
             "128": "images/icon128.png"
  }
}
